{% extends 'bases/base.html.twig' %}

{% block title %}{{ reviewInfo.review.title }}{% endblock %}


{% block body %}
    <div class="container">
        <div class="display-5 text-center mb-3">
            {{ reviewInfo.review.title }}
        </div>
        <div class="container bg-light py-2 rounded-2 border mb-2">
            <div class="">
                {% if is_granted('ROLE_USER') and reviewInfo.author_id == app.user.id or is_granted('ROLE_ADMIN') %}
                    <p class="mb-1">
                        <a href="{{ path('review_edit', {'id': reviewInfo.review.id})}}" class="link-dark">
                            <i class="bi bi-gear"></i>
                        </a>
                    </p>
                {% endif %}
                <p class="mb-1">
                    {{ 'review_author'|trans|u.title }}:
                    <a href="{{ path('user_page', {'id': reviewInfo.author_id}) }}" class="link-dark">
                        {{ reviewInfo.author_name }} ({{ reviewInfo.author_likes }})
                    </a>
                </p>
                <p class="mb-1">
                    {{ 'review_group'|trans|u.title }}: {{ reviewInfo.group | trans }}
                </p>
                <p class="mb-1">{{ 'review_author_rating'|trans|u.title }}: {{ reviewInfo.review.authorRating }}/10</p>
                <p class="mb-1">
                    {{ 'review_community_rating'|trans|u.title }}:
                    <span class="review-rating-value">
                        {{ reviewInfo.avgRating | round(2) }}
                    </span>
                </p>
            </div>
        </div>
        <div class="fs-4 container border border-2 p-2 rounded-2 bg-light">
            {% if reviewInfo.review.illustrations.count > 0 %}
                <div class="carousel slide carousel-dark bg-white p-2 rounded-2 border border-2" id="reviewInfo-carousel" data-bs-ride="carousel">
                    <div class="carousel-inner h-25">
                        {% for illustration in reviewInfo.review.illustrations %}
                            <div class="carousel-item h-25 {% if loop.first %}active{% endif %}">
                                <div class="d-flex align-items-center h-25">
                                    <img src="https://res.cloudinary.com/ht74ky0yv/image/upload/v1638384344/{{ illustration.img }}"
                                        class="d-flex carousel-img-size mx-auto align-self-center mw-100 mh-100">
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    {% if reviewInfo.review.illustrations.count > 1 %}
                        <button class="carousel-control-prev" type="button" data-bs-target="#reviewInfo-carousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon text-secondary" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#reviewInfo-carousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon text-secondary" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    {% endif %}
                </div>
            {% endif %}
            <div class="border rounded-2 bg-white my-2 p-1">
                {{ reviewInfo.review.text|striptags|markdown_to_html}}
            </div>
            <div class="fs-6">
                {{ 'review_tags'|trans }}:
                {% for tag in reviewInfo.review.tags %}
                    <a href="{{ path('review_tag', {'tagName': tag}) }}"
                        class="btn btn-primary btn-sm text-white">
                        {{ tag }}
                    </a>
                {% endfor %}
                <div class="col text-end text-secondary">
                    {{ reviewInfo.review.dateOfPublication | format_datetime('medium', 'short', locale=app.request.locale) }}
                </div>
            </div>
        </div>
        {% if is_granted('ROLE_USER') %}
            <div class="my-2 row">
                <div class="col-5">
                    <button class="review-like-button btn {{ isLiked ? 'btn-success' : 'btn-secondary' }}">
                        {{ 'review_button_like'|trans|u.title }}
                        (
                            <span class="review-likes-count">
                                {{ reviewInfo.review.likes.count }}
                            </span>
                        )
                    </button>
                </div>
                <div class="col-7">
                    <div class="review-rating-buttons text-end
                        {{ ratingValue > 0 ? 'appreciated' : '' }}">
                        {% for i in 1..5 %}
                            <button class="btn review-rating-button-{{ i }} {{ (ratingValue >= i) ? 'btn-success' : 'btn-secondary' }}">
                                {{ i }}
                            </button>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <div class="display-6 m-2 text-center">
                {{ 'review_comments'|trans|u.title }}
            </div>
            {% include 'comment/comments-block.html.twig' with {
                'reviewInfo': reviewInfo,
                'lastId': lastId,
            } %}
        {% else %}
            <div class="display-6 m-2 text-center">
                {{ 'not_access_for_view_comments'|trans|u.title }}
            </div>
        {% endif %}
    </div>
{% endblock %}